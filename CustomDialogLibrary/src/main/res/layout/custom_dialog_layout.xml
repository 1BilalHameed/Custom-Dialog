<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogPopup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_white_background"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewPopupCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/small_margin"
        android:contentDescription="@string/content_description"
        android:padding="@dimen/medium_margin"
        android:src="@drawable/ic_cancel" />

    <ImageView
        android:id="@+id/imageViewPopupDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_tick" />

    <TextView
        android:id="@+id/textViewPopupTitle"
        style="@style/heading_text_view_style"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/medium_margin"
        android:text="@string/desh" />


    <TextView
        android:id="@+id/textViewPopupDescription"
        style="@style/simple_text_view_style"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginEnd="@dimen/small_margin"
        android:padding="@dimen/small_margin"
        android:text="@string/desh"
        android:textColor="@color/colorGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="@dimen/large_margin"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_marginTop="@dimen/medium_margin"
        >


        <Button
            android:id="@+id/buttonFirst"
            style="@style/button_style"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:backgroundTint="@color/colorAccent"
            android:padding="@dimen/medium_margin"
            android:text="@string/desh" />

        <Button
            android:id="@+id/buttonSecond"
            style="@style/button_style"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:backgroundTint="@color/colorAccent"
            android:padding="@dimen/medium_margin"
            android:text="@string/desh" />

    </LinearLayout>


</LinearLayout>